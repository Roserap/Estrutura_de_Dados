//4. Dado um array de 10 inteiros, conte quantas vezes cada número aparece.

import java.util.HashMap;
import java.util.Map;
public class ContarNumeros {

    public static void main(String[] args) {
        int[] arrayDeInteiros = {1, 2, 3, 4, 5, 5, 4, 3, 2, 1};
        Map<Integer, Integer> contagemNumeros = new HashMap<>();

        for (int numero : arrayDeInteiros) {
            contagemNumeros.put(numero, contagemNumeros.getOrDefault(numero, 0) + 1);
        }

        System.out.println("Contagem de cada número:");
        for (Map.Entry<Integer, Integer> entrada : contagemNumeros.entrySet()) {
            System.out.println("Número " + entrada.getKey() + ": " + entrada.getValue() + " vezes");
        }
    }
}
