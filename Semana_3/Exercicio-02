//2.   Leia um array de 10 números e depois pergunte ao usuário um número.
//Informe se o número existe no array e em qual posição.

import java.util.Scanner;

public class EncontrarNumero {

    public static void main(String[] args) {
        
        int[] numeros = new int[10];
        Scanner scanner = new Scanner(System.in);

        System.out.println("Digite 10 números:");

        for (int i = 0; i < numeros.length; i++) {
            System.out.print("Número " + (i + 1) + ": ");
            numeros[i] = scanner.nextInt();
        }

        System.out.print("\nDigite o número que você quer encontrar: ");
        int numeroProcurado = scanner.nextInt();

        boolean encontrado = false;
        int posicao = -1;

        for (int i = 0; i < numeros.length; i++) {
            if (numeros[i] == numeroProcurado) {
                encontrado = true;
                posicao = i;
                break;
            }
        }

        if (encontrado) {
            
            System.out.println("O número " + numeroProcurado + " foi encontrado na posição: " + (posicao + 1));
        } else {
            System.out.println("O número " + numeroProcurado + " não foi encontrado no array.");
        }

        scanner.close();
    }
}
