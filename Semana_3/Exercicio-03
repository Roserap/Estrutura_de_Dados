//3. Leia um array de 10 nomes e permita que o usuário digite um nome para “remover”.
//Ao remover, substitua o valor por "---".


import java.util.Scanner;

public class RemoverNome {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        String[] nomes = new String[5];

        System.out.println("Digite 5 nomes:");

       for (int i = 0; i < nomes.length; i++) {
            System.out.print("Nome " + (i + 1) + ": ");
            nomes[i] = scanner.nextLine();
        }

        System.out.print("\nDigite o nome que deseja 'remover': ");
        String nomeParaRemover = scanner.nextLine();

        boolean encontrado = false;
        for (int i = 0; i < nomes.length; i++) {
            if (nomes[i].equals(nomeParaRemover)) {
                nomes[i] = "---";
                encontrado = true;
                break;
            }
        }

        if (encontrado) {
            System.out.println("\nNome 'removido' com sucesso!");
        } else {
            System.out.println("\nNome não encontrado no array.");
        }

        System.out.println("\nResultado após a 'remoção':");
        for (int i = 0; i < nomes.length; i++) {
            System.out.println(nomes[i]);
        }

        scanner.close();
    }
}
